
<div class="text-center">
    <div class="container" style="width:100%;margin-top:2%">
        <div class="row">
            <form method="post" action="@Url.Action("Save", "Airlines")" enctype="multipart/form-data">
                <div class="card" style="width: 18rem;margin-left:1%;margin-top:1%">
                    <div class="form-floating mb-3">
                        <input type="text" name="name" class="form-control" id="floatingname" placeholder="Name">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="phone" class="form-control" id="floatingphone" placeholder="Phone">
                        <label for="floatingPassword">Password</label>
                    </div>
                     <div class="form-floating">
                       <div class="dropdown">
                              <button class="btn btn-secondary dropdown-toggle" type="button" id="drocountry" name="drocountry" data-bs-toggle="dropdown" aria-expanded="false">
                                Country
                              </button>
                             <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                           @foreach (var item in ViewBag.CountriesModel)
                           {  
                                <li><a class="dropdown-item" href="">@item.cou_name</a></li>
                           }
                           </ul>
                            </div>
                        
                    </div>
                    <div class="d-flex pt-1">
                        <div class="file-upload-wrapper">
                            <input type="file" name="photo" class="form-control" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-outline-primary me-1 flex-grow-1">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>