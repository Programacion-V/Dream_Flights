
<div class="text-center">
    <div class="container" style="width:40%;margin-top:2%">
       
            <form method="post" action="@Url.Action("Save", "Airlines")" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-4 mb-4">
                  <div class="card mb-4">
                    <div class="card-header py-3">
                      <h5 class="mb-0">New Airline</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-outline mb-4">
                          <input type="text" id="name" name="name" class="form-control" />
                          <label class="form-label" for="form6Example4">Airline Name</label>
                        </div>
                        <div class="form-outline mb-4">
                          <input type="text" id="phone" name="phone" class="form-control" />
                          <label class="form-label" for="form6Example4">Airline Phone</label>
                        </div>
                        <div class="form-outline mb-4">

                            @Html.DropDownListFor(CountriesModel => CountriesModel.id_country, (IEnumerable<SelectListItem>)ViewBag.cou_name, new { @class = "form-control" })
                            <select class="form-select" name="country" aria-label="Select Country">
                              <option selected>Select Country</option>
                              @foreach (var item in @ViewBag.CountriesModel)
                              {
                              <option value="@item.id_country">@item.cou_name</option>
                              }
                            </select>
                              
                        </div>
                        <div class="form-outline mb-4">
                            <div class="file-upload-wrapper">
                                <input type="file" name="photo" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class=card-footer>
                            <button type="submit" class="btn btn-outline-success">Save</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
    </div>
</div>